<Page x:Class="UserHomePage.TeamPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UserHomePage"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="TeamPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Name="TeamNameTxt" Grid.Row="0"></TextBlock>

            <StackPanel Orientation="Horizontal">
                <Button Click="Players_OnClick">Player stats</Button>
            </StackPanel>
        </StackPanel>
        
        <ListBox Grid.Row="1" Name="TeamMatchList" MouseDoubleClick="TeamMatchList_OnMouseDoubleClick">

        </ListBox>
    </Grid>
</Page>
